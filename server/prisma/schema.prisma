generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  password    String
  created_at  DateTime    @default(now())
  ShortLink   ShortLink[]
}

model ShortLink{
  id  Int @id @default(autoincrement())
  original_url      String
  alias        String      @unique
  click_count       Int         @default(0)
  created_at        DateTime    @default(now())
  expires_in        Int         @default(0)
  userId            Int
  user              User        @relation(fields: [userId], references: [id])
  ClickLog          ClickLog[]
}

model ClickLog{
  id              Int             @id @default(autoincrement())
  clicked_at      DateTime        @default(now())
  ip_address      String?
  user_agent      String?
  referer         String?
  shortlinkId     Int
  shortlink       ShortLink       @relation(fields: [shortlinkId], references: [id])
}